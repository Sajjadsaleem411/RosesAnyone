<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.flower.FlowerActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarFlower"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/ivAddFlowerBack"
                    style="@style/small_icons"
                    android:src="@drawable/ic_back_press"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

            <TextView
                    android:id="@+id/tvFlowerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/conferenceFlower"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"/>
            <FrameLayout
                    android:id="@+id/flToolbarCart"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:paddingEnd="10dp">
                <ImageView
                        style="@style/medium_icons"
                        android:src="@drawable/ic_cart_white"
                        android:layout_gravity="end|center"
                />
                <TextView
                        android:id="@+id/tvToolbarCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_yellow"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="0"
                        android:textSize="10sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="end|center"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"/>

            </FrameLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@id/toolbarFlower" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/toolbarImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/banner"
                android:layout_weight="0.5"/>
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/gvAddFlower"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1.5"
                  android:background="@color/lightGrey"
                  android:gravity="center"
                  android:numColumns="2"
                  android:scrollbars="vertical"/>
    </LinearLayout>
</RelativeLayout>