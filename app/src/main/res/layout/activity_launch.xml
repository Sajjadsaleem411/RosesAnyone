<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LaunchActivity"
        android:background="@drawable/bg_with_bar"
        android:padding="20dp">

    <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_roses_anyone_2x"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:paddingStart="50dp"
                  android:paddingEnd="50dp">
        <Button android:id="@+id/btnLaunchLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_primary_dark"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"/>
        <Button android:id="@+id/btnLaunchRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/white_border"
                android:text="@string/register"/>
    </LinearLayout>

</RelativeLayout>