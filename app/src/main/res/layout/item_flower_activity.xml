<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/ll_item_econmyCar"
              android:tag="cards main container">

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

            <ImageView
                    android:id="@+id/ivItemFlower"
                    android:tag="image_tag"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/corporate"/>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
            android:padding="10dp">
                <TextView
                        android:id="@+id/tvItemFlowerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/conference"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_regular"/>

                <TextView
                        android:id="@+id/tvItemFlowerDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/conferenceDesc"
                        android:layout_marginTop="10dp"
                        android:maxLines="2"
                        android:layout_below="@id/tvItemFlowerTitle"
                        android:textColor="@color/black"/>
               <!-- <TextView
                        android:id="@+id/tvItemFlowerPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$15"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins_regular"/>-->
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>