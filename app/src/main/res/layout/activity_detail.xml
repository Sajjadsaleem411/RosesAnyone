<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.flower.FlowerActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarFlower"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/ivDetailBack"
                    style="@style/small_icons"
                    android:src="@drawable/ic_back_press"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

            <TextView
                    android:id="@+id/tvFlowerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/conferenceFlower"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginEnd="20dp"/>

            <FrameLayout
                    android:id="@+id/flToolbarCart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:paddingEnd="10dp">
                <ImageView
                        style="@style/medium_icons"
                        android:src="@drawable/ic_cart_white"
                        android:layout_gravity="center"
                />
                <TextView
                        android:id="@+id/tvToolbarCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_yellow"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="0"
                        android:textSize="10sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"/>

            </FrameLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@id/toolbarFlower" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/toolbarImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/demo_4_3"
                android:layout_weight="1"/>
        <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                    android:id="@+id/tvDetailDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/conferenceDesc"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_below="@id/tvItemFlowerTitle"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/tvDetailDesigner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flowerDesigner"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_below="@id/tvDetailDesc"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/tvItemCartPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$15.00"
                    android:layout_below="@+id/tvDetailDesigner"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qty"
                    android:textColor="@color/mediumGrey"
                    android:layout_below="@+id/tvDetailDesigner"
                    android:layout_toStartOf="@+id/llQty"
                    android:layout_marginEnd="10dp"/>
            <LinearLayout
                    android:id="@+id/llQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tvDetailDesigner"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:background="@drawable/primary_border">
                <TextView
                        android:id="@+id/tvDetailMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorPrimary"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"/>
                <View android:layout_width="1dp"
                      android:layout_height="match_parent"
                      android:background="@color/colorPrimary"/>
                <TextView
                        android:id="@+id/tvDetailQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/colorPrimary"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"/>
                <View android:layout_width="1dp"
                      android:layout_height="match_parent"
                      android:background="@color/colorPrimary"/>
                <TextView
                        android:id="@+id/tvDetailPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_primary_oneside"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"/>
            </LinearLayout>
        </RelativeLayout>
        <Button
                android:id="@+id/btnDetailAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addToCart"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_primary"
        />
    </LinearLayout>
</RelativeLayout>